<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvFlameDetected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flame Detected: No"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textColor="@color/black"
        android:text="Temperature: 0Â°C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFlameDetected" />

    <TextView
        android:id="@+id/mqValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ Value: 0"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTemperature"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutup"
        app:layout_constraintTop_toBottomOf="@id/mqValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
